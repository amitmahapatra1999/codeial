<section class="container">
  <div class="row">
    <div class="col-12 col-md-3"></div>
    <div class="col-12 col-md-6">
      <div class="card mb-5 p-3">
        <div class="row">
          <div class="col-4">
            <img
              src="<%= user.avatar %>"
              alt="avatar"
              height="100"
              width="100"
            />
          </div>
          <div class="col-8 d-flex align-items-center">
            <h5><%= user.name %></h5>
          </div>
        </div>
      </div>
      <div class="card py-3">
        <div class="card-heading border-bottom text-center">
          <h3>User Profile</h3>
        </div>
        <div class="card-body">
          <% if(user.id == profile_user.id){ %>
          <div class="row">
            <form
              action="/user/update/<%= profile_user.id%>"
              enctype="multipart/form-data"
              method="post"
            >
              <div class="mb-3">
                <label for="">Name</label>
                <input
                  class="form-control"
                  type="text"
                  id="name"
                  name="name"
                  placeholder="Enter your Name"
                  value="<%= profile_user.name %>"
                />
              </div>
              <div class="mb-3">
                <label html-for="email">Email</label>
                <input
                  class="form-control"
                  type="email"
                  id="email"
                  name="email"
                  placeholder="Enter your email"
                  value="<%= profile_user.email %>"
                />
              </div>
              <div class="mb-3">
                <label html-for="email">Profile Picture</label>
                <input
                  class="form-control"
                  type="file"
                  id="avatar"
                  name="avatar"
                  placeholder="Profile Picture"
                />
              </div>
              <div class="mb-3 text-center">
                <button class="btn btn-success" type="submit">
                  Save Changes
                </button>
              </div>
            </form>
          </div>
          <%}else{%>
          <div class="text-center">
            <p>Name:<%= locals.profile_user.name%></p>
            <p>Email: <%= locals.profile_user.email%></p>
          </div>
          <%}%>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-3"></div>
  </div>
</section>
