<div class="container">
  <div class="row">
    <div class="col-12 col-md-3"></div>
    <div class="col-12 col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h3>User Login</h3>
        </div>
        <div class="card-body">
          <div class="text-center">
            <a class="btn btn-outline-secondary" href="/user/auth/google">
              <img
                src="https://cdn-icons-png.flaticon.com/512/300/300221.png"
                height="30"
                width="30"
                alt="google-icon"
              />
            </a>
          </div>
          <form action="/user/create-session" method="post">
            <div class="mb-3">
              <label html-for="email">Email</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                placeholder="Enter your email"
              />
            </div>
            <div class="mb-3">
              <label for="">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                placeholder="Enter your password"
              />
            </div>
            <div class="mb-3 text-center">
              <button class="btn btn-primary" type="submit">Login</button>
            </div>
            <div class="text-center">
              <p>New To Codeial? <a href="/user/signup">Create a account</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-3"></div>
  </div>
</div>
